currentBuild.displayName = " Surya - "+currentBuild.number

environment {
    IMAGE_TAG = image_tag()
}

pipeline {
    agent any
    stages{
        stage('hello world'){
           steps{
             echo "hello world ${BUILD_DISPLAY_NAME}"
             echo "${JOB_NAME}"
           }
        }
        stage('docker build'){
            steps{
                echo "${IMAGE_TAG}"
                sh "sudo mv target/petclinic target/petclinic.war"
                sh "sudo docker build -t surya22ganesh/sampleimg:${IMAGE_TAG} ."
            }
        }
    }
}

def image_tag() {
    def tag = sh script: 'git rev-parse HEAD', returnStdout: true
    return tag
}