currentBuild.displayName = " Surya - "+currentBuild.number

environment {
    IMAGE_TAG = image_tag()
    LATEST_COMMIT_ID = "git rev-parse HEAD"
}

pipeline {
    agent any
    stages{
        stage('hello world'){
           steps{
             echo "hello world ${BUILD_DISPLAY_NAME}"
             echo "${JOB_NAME}"
           }
        }
        stage('maven'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('docker build'){
            steps{
                sh "sudo git config --global --add safe.directory /var/lib/jenkins/workspace/p1"
                echo "${LATEST_COMMIT_ID}"
                // sh "sudo mv target/petclinic target/petclinic.war"
                sh "sudo docker build -t surya22ganesh/sampleimg:${env.LATEST_COMMIT_ID} ."
            }
        }
    }
}

def image_tag() {
    def tag = sh script: 'git rev-parse HEAD', returnStdout: true
    return tag
}