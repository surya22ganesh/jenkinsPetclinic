pipeline {
    agent any

    environment{
        name = "global_surya"
        place = "chennai"
    }

    stages{
        stage('hello world'){
            steps {
                echo "hello world"
            }
        }
        stage('stage 2'){
            steps{
                sh ''' 
                    sudo mvn clean package 
                    sudo mv target/*.war target/pet.war
                '''
            }
        }
        stage('ssh agent add - tomcat'){
            steps{
                sshagent(['tomcat-ssh-agent']) {
                    // some block
                     sh ''' 
                        ssh -o StrictHostKeyChecking=no 
                    '''
                }
            }
        }
    }

}